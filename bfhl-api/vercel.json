{
    "builds": [
      {
        "src": "Backend/app.js",
        "use": "@vercel/node"
      },
      {
        "src": "Frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "Backend/app.js"
      },
      {
        "src": "/(.*)",
        "dest": "Frontend/dist/index.html"
      }
    ],
    "buildCommand": "cd Frontend && npm install && npm run build"
  }
  